             xmlns:local="clr-namespace:BudgetApp.UserControls"
             xmlns:uc="clr-namespace:BudgetApp.UserControls"
             mc:Ignorable="d" 
             Background="#fff"
             d:DesignHeight="50" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
