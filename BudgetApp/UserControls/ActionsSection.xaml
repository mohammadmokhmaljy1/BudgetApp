        <uc:CustomButton Width="50" Height="36" Grid.Column="0" Margin="10,0,10,0" FontSize="16" FontFamily="Segoe MDL2 Assets" ButtonText="" />

        <uc:CustomButton FontFamily="Segoe MDL2 Assets" ButtonText="" Width="50" Height="36" Grid.Column="1" Margin="0" FontSize="16" />

        <uc:CustomTextBox Grid.Column="2" WatermarkText="...بحث" Width="200" Height="40" FontSize="15" />

        <uc:CustomButton ButtonText="إضافة دخل جديد" Width="130" Height="36" Grid.Column="3" Margin="10,0,25,0" FontSize="16" />
    </Grid>
</UserControl>
