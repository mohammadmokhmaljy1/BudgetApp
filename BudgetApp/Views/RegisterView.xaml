<Window x:Class="BudgetApp.Views.RegisterView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BudgetApp.Views"
        xmlns:customControls="clr-namespace:BudgetApp.UserControls"
        mc:Ignorable="d"
        Closed="Window_Closed"
        Title="واجهة إنشاء حساب " Height="500" Width="678"
        WindowStartupLocation="CenterScreen"
        Background="#fff">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Center">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Label Grid.Row="0" Content="إنشاء حساب " VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="24" Foreground="Purple" FontWeight="Bold" Margin="0,0,0,15" />

            <StackPanel Orientation="Horizontal" Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,0,0,15" >
                <Image Source="/Resourses/facebook.png" Width="32" />
                <Image Source="/Resourses/facebook.png" Width="32" />
                <Image Source="/Resourses/facebook.png" Width="32" />
            </StackPanel>

            <customControls:CustomTextBox Grid.Row="2"
                       WatermarkText="أدخل اسم المستخدم"
                       Margin="15" />

            <customControls:CustomTextBox Grid.Row="3"
               WatermarkText="أدخل البريد  الإلكتروني"
               Margin="15" />
            <customControls:CustomTextBox Grid.Row="4"
    WatermarkText="أدخل كلمة المرور  "
    Margin="15" />
            <customControls:CustomTextBox Grid.Row="5"
    WatermarkText="تأكيد  كلمة المرور"
    Margin="15" />

            <customControls:CustomButton ButtonText="إنشاء حساب " Grid.Row="6" Margin="5,15" Padding="10" FontSize="16" Width="260" Height="60" />


        </Grid>

        <Grid Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Center" Width="335" Height="500" >
            <Grid.Background>
                <ImageBrush ImageSource="/Resourses/sign-background.jpg" Stretch="Fill"/>
            </Grid.Background>

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Label  Content=" هل يوجد لديك حساب؟" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="18" Foreground="White"  FontWeight="Bold" Margin="0,95,0,0" Grid.Row="2" />
            <customControls:CustomButton ButtonText="تسجيل دخول " VerticalAlignment="Center" Margin="0,216,10,0" Padding="10" FontSize="16" Grid.Row="2" Height="60" Width="200" Click="CustomButton1_Click" />

        </Grid>


    </Grid>
</Window>
